<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.infinity.airtop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".views.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".views.ChatActivity"/>
        <activity android:name=".views.EntranceActivity" />
        <activity android:name=".views.LoginActivity" />
        <activity android:name=".views.SearchUserActivity"/>
        <activity android:name=".views.NavDrawerActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".views.PhoneSettingsActivity"
            android:label="@string/title_activity_phone_settings" />
        <activity
            android:name=".views.UsernameSettingsActivity"
            android:label="@string/title_activity_username_settings" />
    </application>

</manifest>